<p id="notice"><%= notice %></p>
<div class='container'>
  <h1>Posts</h1>

  <table class='table-all'>
    <thead>
      <tr>
        <th>Mesage</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <%= render 'form', post: @post %>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.mesage %></td>
          <td><%= post.created_at %></td>
          <td><%= post.updated_at %></td>
          <td><%= link_to 'Editar', edit_post_path(post) %></td>
          <td><%= link_to 'Excluir', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if @posts.empty? %>
    <p>Sem nenhum Post ainda</p>
  <% end %>
</div>
